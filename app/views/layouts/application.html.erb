<!DOCTYPE html>
<html>
<head>
  <title>FilmBox</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="amber darken-2 white-text">
  <nav class="white">
    <div class="container">
      <%= link_to 'Film Box', root_path, class: 'brand-logo green-text text-darken-4' %>
      <ul class="right">
        <% if current_admin %>
          <li><%= link_to 'Add New Image', new_admin_image_path, class: 'green-text text-darken-2' %></li>
          <li><%= link_to 'Add New Genre', new_admin_genre_path, class: 'green-text text-darken-2' %></li>
        <% end %>

        <% if current_user %>
          <li><%= link_to 'My Films', films_path, class: 'red-text text-darken-2 strong' %>
          <li><%= link_to 'Logout', logout_path, method: :delete, class: 'green-text text-darken-2' %></li>
        <% else %>
          <li><%= link_to 'Create Account', new_user_path, class: 'green-text text-darken-2' %>
          <li><%= link_to 'Login', login_path, class: 'green-text text-darken-2' %></li>
        <% end %>
      </ul>
    </div>
  </nav>

<div class="container">

  <%= yield %>

</div>

</body>
</html>
